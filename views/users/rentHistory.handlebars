<link rel="stylesheet" href="/css/site.css" type="text/css" />

<div class="container-fluid alignCenter">
    <div class="row">
        <h1>Hi Admin. You can see all user's rent history from here.</h1>
        <p>Just choose user and click See Rent History button</p>
        <div class="col-lg-4">&nbsp;</div>
        <div class="col-lg-4">
          <form method="GET" action="/rentHistory">
                <select name="user">
                    {{#each users}}
                        <option value={{this._id}}>{{this.username}}</option>
                    {{/each}}
                </select><br /><br />
                <input type="submit" class="btn btn-default" value="See Rent History">
            </form>
        </div>
        <div class="col-lg-12">&nbsp;</div>
    </div>

{{#each rentHistory}}
<hr />
  <div class="row alignCenter">
    <div class="col-lg-12">
         <h3>Model of car {{this.carModel}}</h3>
            <p>Car Image:</p>
            <p><img class="imgSize centerElement" src={{this.carImage}} alt={{this.carModel}} /></p>
            <p>Rent Started On {{this.rentStartedDate}}</p>
            <p>Price On Day(In that time) - {{this.pricePerDayInDollars}}</p>
            <p>Days Of Rent {{this.daysOfRent}}</p>
            <p>Total Paid($) {{this.totalSumPaidInDollars}}</p>
    </div>
  </div>


</div>


{{/each}}

<div class="row">
  <div class="col-lg-12">
    {{#if hasPrevPage}}
      <a class="btn btn-default" href="/rentHistory?user={{user}}&page={{prevPage}}">Prev</a>
    {{/if}}

    {{#if hasNextPage}}
      <a class="btn btn-default" href="/rentHistory?user={{user}}&page={{nextPage}}">Next</a>
    {{/if}}
  </div>
</div>


