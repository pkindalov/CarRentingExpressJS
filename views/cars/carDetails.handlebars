<link rel="stylesheet" href="/css/site.css" type="text/css" />

<div class="container-fluid alignCenter">
    <div class="row">
        <div class="col-lg-12">
           <img class="centerElement imgContainer" src={{car.image}} alt={{car.model}} />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">
            <strong>Model:</strong>
        </div>
        <div class="col-lg-2">
            {{car.model}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">
            <strong>Price Per Day </strong>
        </div>
        <div class="col-lg-2">
            {{car.pricePerDay}}$
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">&nbsp;</div>
        <div class="col-lg-2">
            <strong>Description:</strong>
        </div>
        <div class="col-lg-2">
            {{car.note}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
               
                 <div class="adminButtonsContainer">
                {{#if isAdmin}}
                    <a class="btn btn-danger" href="/deleteCar?id={{car._id}}">Delete</a>
                     <a class="btn btn-warning" href="/editCar?id={{car._id}}">Edit</a>
                {{/if}}

                {{#if currentUser}}

                

                    {{#if rightToVote}}
                        <a class="btn btn-primary" href="/like?car={{car._id}}">Like</a>
                        {{else}}
                        <p>You have already like this car. You can <a href="/dislike?car={{car._id}}">Dislike</a> it.</p>
                    {{/if}}

                   
                
                    {{#if car.isCarRented}}
                        <p>Sorry.. this car is rented at the moment. This car will be free after {{car.rentedDays}} days from {{car.startRentingDate}}</p>
                    {{else}}

                          <a class="btn btn-primary" href="/cars/rent/{{car._id}}">Rent this car</a>
                {{/if}}    

                {{/if}}
                
                </div>

                   {{#if noLikes}}
                        <p>No likes yet. Be the first who like this. But first you must <a href="/users/login">login</a> or create account from <a href="/users/register">register</a></p>
                        {{else}}
                        <p><a href="/peopleLikes?car={{car._id}}">{{likesCount}}</a> people like this</p>
                    {{/if}}
        </div>
    </div>
</div>

